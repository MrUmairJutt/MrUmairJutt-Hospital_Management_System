@model HospitalManagement.Models.Appointment

@{
    ViewData["Title"] = "Details";
}

<h2>Appointment Details</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">Doctor Id</dt>
        <dd class="col-sm-10">@Model.DoctorId</dd>
        <dt class="col-sm-2">Patient Id</dt>
        <dd class="col-sm-10">@Model.PatientId</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
