@model HospitalManagement.Models.Appointment

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Appointment</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Doctor Id</dt>
        <dd class="col-sm-10">@Model.DoctorId</dd>
        <dt class="col-sm-2">Patient Id</dt>
        <dd class="col-sm-10">@Model.PatientId</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
