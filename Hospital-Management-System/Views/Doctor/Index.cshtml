@model IEnumerable<HospitalManagement.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

<h2>Doctors</h2>
<a asp-action="Create">Create New Doctor</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Specialty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var doctor in Model)
    {
        <tr>
            <td>@doctor.Id</td>
            <td>@doctor.Name</td>
            <td>@doctor.Specialty</td>
            <td>
                <a asp-action="Edit" asp-route-id="@doctor.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@doctor.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@doctor.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
