@model HospitalManagement.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Hospital Management Dashboard</h2>
<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Doctors</h5>
                <p class="card-text">Total: @Model.DoctorCount</p>
                <a href="@Url.Action("Index", "Doctor")" class="btn btn-light">View Doctors</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Patients</h5>
                <p class="card-text">Total: @Model.PatientCount</p>
                <a href="@Url.Action("Index", "Patient")" class="btn btn-light">View Patients</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Appointments</h5>
                <p class="card-text">Total: @Model.AppointmentCount</p>
                <a href="@Url.Action("Index", "Appointment")" class="btn btn-light">View Appointments</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Departments</h5>
                <p class="card-text">Total: @Model.DepartmentCount</p>
                <a href="@Url.Action("Index", "Department")" class="btn btn-light">View Departments</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-secondary mb-3">
            <div class="card-body">
                <h5 class="card-title">Prescriptions</h5>
                <p class="card-text">Total: @Model.PrescriptionCount</p>
                <a href="@Url.Action("Index", "Prescription")" class="btn btn-light">View Prescriptions</a>
            </div>
        </div>
    </div>
</div>

<h3 class="mt-4">Recent Appointments</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Appointment ID</th>
            <th>Doctor</th>
            <th>Patient</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var appt in Model.RecentAppointments)
    {
        <tr>
            <td>@appt.AppointmentId</td>
            <td>@appt.DoctorName</td>
            <td>@appt.PatientName</td>
            <td>@appt.Date.ToString("yyyy-MM-dd HH:mm")</td>
        </tr>
    }
    </tbody>
</table>