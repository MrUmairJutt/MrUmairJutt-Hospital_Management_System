@model IEnumerable<HospitalManagement.Models.Patient>

@{
    ViewData["Title"] = "Index";
}

<h2>Patients</h2>
<a asp-action="Create" class="btn btn-primary">Create New Patient</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var patient in Model)
    {
        <tr>
            <td>@patient.Id</td>
            <td>@patient.Name</td>
            <td>@patient.Age</td>
            <td>@patient.Gender</td>
            <td>
                <a asp-action="Edit" asp-route-id="@patient.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@patient.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@patient.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
