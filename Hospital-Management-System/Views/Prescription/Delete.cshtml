@model HospitalManagement.Models.Prescription

<h2>Delete Prescription</h2>
<h3>Are you sure you want to delete this?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Patient Id</dt>
        <dd class="col-sm-10">@Model.PatientId</dd>
        <dt class="col-sm-2">Medication</dt>
        <dd class="col-sm-10">@Model.Medication</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
